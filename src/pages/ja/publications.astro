---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import { PublicationList } from '../../components/react/PublicationList';
import { getPublications } from '../../utils/bibtex';

const lang = 'ja';
const publications = await getPublications();
---

<Layout title="業績リスト | Osaka University Lab" lang={lang}>
    <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <PageHeader title="業績リスト" subtitle="研究成果一覧" />
        <PublicationList client:only="react" publications={publications} lang="ja" />
    </main>
</Layout>
