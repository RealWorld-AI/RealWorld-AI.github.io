---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import MediaFrame from '../../components/MediaFrame.astro';
import { researchAreas } from '../../data/researchAreas';
import { papers as paperDetails } from '../../data/papers';
import allPublications from '../../data/publications.json';
import { getCollection } from 'astro:content';

const lang = 'ja';

// Get content collection for research areas to fetch images
const allResearchContent = await getCollection('research', ({ id }) => {
  return id.startsWith('ja/');
});

// Merge publication data with paper details
const detailedPapers = allPublications
  .map(pub => {
    const detail = paperDetails.find(p => p.id === pub.id);
    if (!detail) return null;
    return { ...pub, ...detail };
  })
  .filter(p => p !== null);

// Augment research areas with papers, keywords, and images
const areasWithData = researchAreas.map(area => {
  const papersInArea = detailedPapers.filter(p => p.area === area.id);
  const allKeywords = papersInArea.flatMap(p => p.keywords);
  
  const keywordCounts = allKeywords.reduce((acc, keyword) => {
    acc[keyword] = (acc[keyword] || 0) + 1;
    return acc;
  }, {} as Record<string, number>);

  const sortedKeywords = Object.entries(keywordCounts)
    .sort(([, a], [, b]) => b - a)
    .map(([keyword]) => keyword)
    .slice(0, 12);

  const content = allResearchContent.find(c => c.slug.endsWith(area.id));

  return {
    ...area,
    papers: papersInArea.sort((a, b) => b.year - a.year),
    keywords: sortedKeywords,
    image: content?.data.image, // Add image property
    fit: content?.data.fit,     // Add fit property
  };
});

const pageDescription = "当研究室では、人間行動認識、バイオロギング、屋内測位、データマイニングの4つの主要な領域に焦点を当て、実世界の情報技術における新たな可能性を探求しています。";
---

<Layout title="研究内容 | Osaka University Lab" lang={lang}>
  <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <PageHeader title="研究内容" subtitle="Research" />
    <p class="text-left text-gray-400 max-w-3xl -mt-4 mb-16">{pageDescription}</p>

    <!-- B. Research Areas Section -->
    <section id="research-areas" class="mb-24">
      <h2 class="text-3xl font-bold text-white text-left mb-12">研究領域</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {areasWithData.map(area => (
          <div class="group bg-lab-card rounded-2xl overflow-hidden border border-white/10 flex flex-col">
            <div class="h-56 overflow-hidden">
              <MediaFrame fit={area.fit ?? 'cover'} padding="sm" class="h-full">
                {area.image ? (
                  <img src={area.image} alt={area.titleJa} class="w-full h-full transition-transform duration-500 group-hover:scale-105" />
                ) : (
                  <div class="w-full h-full bg-gray-800/50 flex items-center justify-center text-gray-500">No Image</div>
                )}
              </MediaFrame>
            </div>
            
            <div class="p-6 flex flex-col flex-grow">
              <h3 class="text-2xl font-bold text-accent mb-2">{area.titleJa}</h3>
              <p class="text-sm text-gray-400 mb-4">{area.titleEn}</p>
              <p class="text-gray-300 mb-6 flex-grow">{area.description}</p>
              
              {area.keywords.length > 0 && (
                <div class="mb-6">
                  <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Keywords</h4>
                  <div class="flex flex-wrap gap-2">
                    {area.keywords.map(keyword => (
                      <span class="bg-white/10 text-gray-300 text-xs font-medium px-2.5 py-1 rounded-full">{keyword}</span>
                    ))}
                  </div>
                </div>
              )}

              <a href={`#area-${area.id}`} class="mt-auto inline-block text-center bg-accent/80 hover:bg-accent text-white font-bold py-2 px-4 rounded-lg transition-colors">
                詳しく見る
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- C. Paper Details Section -->
    {areasWithData.map(area => (
      <section id={`area-${area.id}`} class="mb-20 scroll-mt-24">
        <div class="relative text-center mb-12">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t border-white/20"></div>
            </div>
            <div class="relative flex justify-center">
                <h2 class="bg-lab-bg px-4 text-3xl font-bold text-white">{area.titleJa}</h2>
            </div>
        </div>

        <div class="space-y-12">
          {area.papers.map(paper => (
            <article class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
              <div class="md:col-span-1">
                <MediaFrame fit={paper.fit ?? 'contain'}>
                  <img src={paper.figure} alt={`Figure for ${paper.title}`} />
                </MediaFrame>
              </div>
              <div class="md:col-span-2">
                <h3 class="text-xl font-bold text-white mb-2">{paper.title}</h3>
                <p class="text-sm text-gray-400 mb-3">
                  {paper.authors}
                  <br />
                  <em class="text-gray-500">{paper.journal}, {paper.year}</em>
                </p>
                <p class="text-gray-300 mb-4 text-sm leading-relaxed">{paper.abstractShort}</p>
                
                {paper.keywords && paper.keywords.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {paper.keywords.map(keyword => (
                    //   <a href="#" class="bg-accent/20 hover:bg-accent/40 text-accent-light text-xs font-medium px-3 py-1.5 rounded-full transition-colors">{keyword}</a>
                      <span class="bg-accent/20 text-accent-light text-xs font-medium px-3 py-1.5 rounded-full">{keyword}</span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))}
          {area.papers.length === 0 && (
            <p class="text-center text-gray-500">この領域の論文は現在準備中です。</p>
          )}
        </div>
      </section>
    ))}
  </main>
</Layout>