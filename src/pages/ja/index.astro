---
import Layout from '../../layouts/Layout.astro';
import { ui } from '../../utils/ui';
import { getCollection } from 'astro:content';
import { Award, ArrowRight } from 'lucide-react';

const lang = 'ja';
const t = ui[lang];

// Fetch and filter awards
const allNews = await getCollection('news');
const awards = allNews
    .filter(item => item.data.type === 'award')
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, 3);
---

<Layout title="Home | Osaka University Lab" lang={lang}>
	<main>
        <!-- Hero Section -->
        <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="max-w-3xl">
                    <h1 class="text-5xl lg:text-7xl font-heading font-bold tracking-tight text-white mb-6 leading-tight">
                        {t['hero.title']}
                    </h1>
                    <p class="text-xl text-gray-400 mb-10 max-w-2xl">
                        {t['hero.subtitle']}
                    </p>
                    <div class="flex flex-wrap gap-4">
                        <a href={`/${lang}/research`} class="px-8 py-3 bg-lab-accent text-white font-medium rounded-lg hover:bg-blue-600 transition-all">
                            {t['btn.learnMore']}
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Background Gradient -->
            <div class="absolute top-0 right-0 -translate-y-12 translate-x-1/4 w-[600px] h-[600px] bg-lab-accent/20 rounded-full blur-[120px] pointer-events-none"></div>
            <div class="absolute bottom-0 left-0 translate-y-12 -translate-x-1/4 w-[500px] h-[500px] bg-lab-secondary/20 rounded-full blur-[100px] pointer-events-none"></div>
        </section>

        <!-- Awards Section -->
        <section class="py-20 bg-lab-bg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between mb-12">
                    <h2 class="text-3xl font-heading font-bold border-l-4 border-lab-accent pl-4">最新の受賞 (Latest Awards)</h2>
                    <a href={`/${lang}/news`} class="flex items-center text-lab-accent hover:text-white transition-colors group">
                        すべて見る <ArrowRight className="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
                    </a>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    {awards.map(award => (
                        <div class="bg-lab-card rounded-2xl p-6 border border-white/5 hover:border-lab-accent/50 transition-all hover:-translate-y-1 hover:shadow-lg hover:shadow-lab-accent/10 flex flex-col h-full">
                            <div class="flex items-center gap-3 mb-4 text-lab-accent">
                                <div class="p-2 bg-lab-accent/10 rounded-lg">
                                    <Award className="w-6 h-6" />
                                </div>
                                <time class="text-sm font-mono text-gray-400">
                                    {award.data.date.toISOString().split('T')[0]}
                                </time>
                            </div>
                            
                            <h3 class="text-lg font-bold text-white mb-3 line-clamp-2">
                                {award.data.title}
                            </h3>
                            
                            {award.data.summary && (
                                <p class="text-sm text-gray-400 line-clamp-3 mb-4 flex-grow">
                                    {award.data.summary}
                                </p>
                            )}
                            
                            <div class="mt-auto pt-4 border-t border-white/5">
                                <a href={`/${lang}/news`} class="text-xs text-gray-500 hover:text-white transition-colors uppercase tracking-wider font-medium">
                                    詳細を読む
                                </a>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>
	</main>
</Layout>
